<?php
class Example extends PHPUnit_Extensions_SeleniumTestCase
{
  protected function setUp()
  {
    $this->setBrowser("*chrome");
    $this->setBrowserUrl("http://localhost/");
  }

  public function testMyTestCase()
  {
    $this->open("/hackademic_nextdev/hackademic/admin/pages/dashboard.php");
    $this->click("css=a[title=\"articlemanager\"] > img");
    $this->click("css=a[title=\"articlemanager\"] > img");
    $this->waitForPageToLoad("30000");
    $this->click("link=A new article");
    $this->click("link=A new article");
    $this->waitForPageToLoad("30000");
    $this->type("name=title", "A new article updated");
    $this->type("name=title", "A new article updated");
    $this->click("name=submit");
    $this->click("name=submit");
    $this->waitForPageToLoad("30000");
    $this->click("name=submit");
    $this->click("name=submit");
    $this->waitForPageToLoad("30000");
    $this->click("xpath=(//input[@name='is_published'])[2]");
    $this->click("xpath=(//input[@name='is_published'])[2]");
    $this->click("name=submit");
    $this->click("name=submit");
    $this->waitForPageToLoad("30000");
    $this->click("link=Article Manager");
    $this->click("link=Article Manager");
    $this->waitForPageToLoad("30000");
  }
}
?>